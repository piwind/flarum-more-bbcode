{
    "name": "piwind/flarum-more-bbcode",
    "description": "Adds more BBCode. Forked from xypp/flarum-more-bbcode with maintained updates.",
    "keywords": [
        "flarum",
        "flarum extension"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0"
    },
    "authors": [
        {
            "name": "piwind",
            "email": "piwind95@outlook.com",
            "role": "Developer"
        },
        {
            "name": "小鱼飘飘",
            "email": "z@xypp.cc",
            "role": "Developer"
        },
        {
            "name": "litalino",
            "email": "info@khatvongsong.vn",
            "role": "Developer"
        },
        {
            "name": "imeepo",
            "email": "me@imeepo.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/piwind/flarum-more-bbcode"
    },
    "flarum-extension": {
        "title": "BBCode More New",
        "category": "feature",
        "icon": {
            "name": "fas fa-code",
            "color": "#fff",
            "backgroundColor": "#D3241C"
        },
        "optional-dependencies": [
            "flarum/likes"
        ]
    },
    "autoload": {
        "psr-4": {
            "Piwind\\MoreBBCode\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "BBCode More",
            "category": "feature",
            "icon": {
                "name": "fas fa-code",
                "color": "#fff",
                "backgroundColor": "#c2185b"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": false,
                "css": true,
                "locale": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": false,
                "bundlewatch": false,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}